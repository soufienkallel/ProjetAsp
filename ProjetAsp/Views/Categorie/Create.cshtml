@model ProjetAsp.Models.Categorie

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Category</h3></div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="CatName" class="form-control" type="text" placeholder="Category" />
                        <label asp-for="CatName">category name</label>
                        
                    </div>
                    
                    
                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                        
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>

            <div class="card-footer text-center py-3">
                <div class="small"><a asp-action="Index">Back to List</a></div>
            </div>
           
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
