@model List<ProjetAsp.Models.Film>


<h2>Film List</h2>

<div class="row">
    @foreach (var film in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card movie-card on-movie-card-hover">
                @if (!string.IsNullOrEmpty(film.Image))
                {
                    <img src="@film.ImagePath" class="card-img-top preview-image" alt="Film Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@film.FilmName</h5>
                    <p class="card-text">@film.FilmDescription</p>
                    <p class="card-text"><strong>Category:</strong> @film.Categorie?.CatName</p>
                    <a href="@film.Trailer" class="btn btn-primary" target="_blank">Watch Trailer</a>
                </div>
                <div class="card-footer">
                    <a class="btn btn-info details-button" data-film-id="@film.FilmId" data-toggle="modal" data-target="#detailsModal">Details</a> |
                    <a asp-action="Edit" asp-route-id="@film.FilmId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@film.FilmId" class="btn btn-danger">Delete</a>
                </div>
                <div class="card-rating">
                    <!-- Ajoutez ici votre élément de notation, par exemple, une étoile ou un score -->
                </div>
            </div>
        </div>
    }
</div>

